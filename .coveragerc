# Configuração de cobertura de código

[run]
source = src/api_client
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*
    */.venv/*
    */venv/*
    */migrations/*

branch = True

[report]
exclude_lines =
    # Ignorar código que não precisa ser testado
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    class .*\bProtocol\):
    @overload

precision = 2
skip_empty = True
show_missing = True

[html]
directory = htmlcov
title = Mech AI - Cobertura de Testes

[xml]
output = coverage.xml
